---
import Layout from "../layouts/Layout.astro";
const name = "John";
const style = "purple";
const response = await fetch('https://jsonplaceholder.typicode.com/users?_limit=10');
const users = await response.json();
const users2 = ["Astro", "Remy", "Kelsey", "Brad"]
const visible = true;
---

<Layout>
<>
<h1 class={style}> 
	Hello World {1 + 1}
</h1>

<h1>
	Hello World {name}
</h1>

<ul>
	{users.map(user => <li>{user.name}</li>)}
</ul>


<ul>
	{users2.map(user => <li>{user}</li>)}
</ul>

{visible && <p>I'am visible</p>}

{visible ? <p>I'am visible</p> : <p>I'am not visible</p> }
</>
</Layout>


<style>
	h1 {
		color: red;
	}
	.purple {
		color: purple;
	}
</style>